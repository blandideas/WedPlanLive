{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/hello",
      "dest": "/api/hello.js"
    },
    {
      "src": "/api/diagnostic",
      "dest": "/api/diagnostic.js"
    },
    {
      "src": "/api/db-direct",
      "dest": "/api/db-direct.js"
    },
    {
      "src": "/api/info",
      "dest": "/api/fix-index.js"
    },
    {
      "src": "/api/tasks-direct",
      "dest": "/api/fix-index.js"
    },
    {
      "src": "/api/db-status",
      "dest": "/api/db-status.js"
    },
    {
      "src": "/api/simple-migrate",
      "dest": "/api/simple-migrate.js"
    },
    {
      "src": "/api/tasks",
      "methods": ["GET"],
      "dest": "/api/getTasks.js"
    },
    {
      "src": "/api/tasks",
      "methods": ["POST"],
      "dest": "/api/createTask.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ]
}