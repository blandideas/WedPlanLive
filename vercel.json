{
  "buildCommand": "npm run db:push && npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/migrate",
      "dest": "/api/migrate"
    },
    {
      "src": "/api/db-push",
      "dest": "/api/db-push"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}